Date: Sat, 20 Aug 2022 16:38:10 -0400
Subject: [PATCH 04/12] arch-nspawn-arm-fix

---
 src/arch-nspawn.in   | 2 +-
 src/makechrootpkg.in | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/arch-nspawn.in b/src/arch-nspawn.in
index 126203c..7a96f11 100644
--- a/src/arch-nspawn.in
+++ b/src/arch-nspawn.in
@@ -122,7 +122,7 @@ else
 	set_arch="${CARCH}"
 fi
 
-exec ${CARCH:+setarch "$set_arch"} systemd-nspawn -q \
+exec systemd-nspawn -q \
 	-D "$working_dir" \
 	-E "PATH=/usr/local/sbin:/usr/local/bin:/usr/bin" \
 	--register=no --keep-unit --as-pid2 \
diff --git a/src/makechrootpkg.in b/src/makechrootpkg.in
index 20f45c3..4c60ef0 100644
--- a/src/makechrootpkg.in
+++ b/src/makechrootpkg.in
@@ -240,7 +240,7 @@ download_sources() {
 	# Ensure sources are downloaded
 	sudo -u "$makepkg_user" --preserve-env=GNUPGHOME,SSH_AUTH_SOCK \
 		env SRCDEST="$SRCDEST" BUILDDIR="$WORKDIR" \
-		makepkg --config="$copydir/etc/makepkg.conf" --verifysource -o "${verifysource_args[@]}" ||
+    makepkg -A --config="$copydir/etc/makepkg.conf" --verifysource -o "${verifysource_args[@]}" ||
 		die "Could not download sources."
 }
 
